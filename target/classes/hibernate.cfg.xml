<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/employees?zeroDateTimeBehavior=convertToNull&amp;useTimezone=true&amp;serverTimezone=UTC</property>
    <property name="hibernate.connection.username">bd2</property>
    <property name="hibernate.connection.password">123456</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <mapping resource="controller/Salaries.hbm.xml"/>
    <mapping resource="controller/Titles.hbm.xml"/>
    <mapping resource="controller/Employees.hbm.xml"/>
    <mapping resource="controller/DeptManager.hbm.xml"/>
    <mapping resource="controller/DeptEmp.hbm.xml"/>
    <mapping resource="controller/Departments.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
